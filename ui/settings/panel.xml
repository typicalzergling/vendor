<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/..\FrameXML\UI.xsd">
	<Script file="settings/panel.lua"/>
	<Include file="settings/common.xml"/>
	<Include file="settings/generalpage.xml"/>
	<Include file="settings/repairpage.xml"/>
	<Include file="settings/sellpage.xml"/>
	<Include file="settings/tooltippage.xml"/>
	<Include file="settings/advancedpage.xml"/>
	<Include file="settings/performancepage.xml"/>

	<Frame name="Vendor_SettingsPanel" virtual="true">
		<Layers>
			<Layer level="ARTWORK">
				<FontString justifyH="LEFT" justifyV="MIDDLE" inherits="GameFontNormal" parentKey="CategoryLabel">
					<KeyValues>
						<KeyValue key="LocKey" value="SETTINGS_CATEGORY_LABEL" type="string"/>
					</KeyValues>
					<Size x="80" y="20"/>
					<Anchors>
						<Anchor point="TOPLEFT" y="-16" x="16"/>
					</Anchors>
				</FontString>				
			</Layer>		
			<Layer level="BACKGROUND">
				<FontString inherits="GameFontDisableTiny" justifyH="RIGHT" justifyV="BOTTOM" parentKey="VersionInfo">
					<Anchors>
						<Anchor point="TOPLEFT" relativePoint="BOTTOMLEFT" x="10" y="30"/>
						<Anchor point="BOTTOMRIGHT" relativePoint="BOTTOMRIGHT" x="-10" y="8"/>
					</Anchors>
				</FontString>
			</Layer>				
		</Layers>
		<Frames>

			<Frame inherits="Vendor_DropMenu" parentKey="Categories">
				<KeyValues>
					<KeyValue key="noAutoSelect" value="true" type="boolean"/>
				</KeyValues>
				<Anchors>
					<Anchor point="TOPLEFT" relativePoint="TOPRIGHT" relativeKey="$parent.CategoryLabel" x="4"/>
					<Anchor point="RIGHT" x="-16"/>
				</Anchors>
			</Frame>

			<Frame inherits="Vendor_BorderFrame" parentKey="Outline">
				<Anchors>
					<Anchor point="TOP" x="0" y="-4" relativeKey="$parent.Categories" relativePoint="BOTTOM"/>
					<Anchor point="RIGHT" x="-16"/>
					<Anchor point="LEFT" x="16"/>
					<Anchor point="BOTTOM"  y="16"/>
				</Anchors>			
			</Frame>
			
		</Frames>
		<Scripts>
			<OnLoad>Vendor.LoadImplementation(self, "Panels", "Settings")</OnLoad>
		</Scripts>
	</Frame>
</Ui>
