<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/..\FrameXML\UI.xsd">
	<Script file="ui/settings/tooltippage.lua"/>

    <Frame name="Vendor_Settings_Tooltip" inherits="Vendor_Settings_Panel" virtual="true">
        <KeyValues>
            <KeyValue key="HelpTextLocKey" value="OPTIONS_DESC_TOOLTIP" type="string"/>
        </KeyValues>
        <Frames>
            <!-- Tooltip seetings -->
            <Frame parentKey="Tooltip" inherits="Vendor_Setting_Checkbox">
				<KeyValues>
					<KeyValue key="LabelLocKey" value="OPTIONS_SETTINGNAME_TOOLTIP" type="string"/>
					<KeyValue key="TextLocKey" value="OPTIONS_SETTINGDESC_TOOLTIP" type="string"/>
				</KeyValues>
                <Size x="250" y="54"/>
                <Anchors>
                    <Anchor point="TOPLEFT" relativeKey="$parent.HelpText" relativePoint="BOTTOMLEFT" x="0" y="-8"/>
                    <Anchor point="RIGHT" x="-16" />
                </Anchors>
            </Frame>

            <!-- Additional information in the tooltip -->
		    <Frame parentKey="TooltipRule" inherits="Vendor_Setting_Checkbox">
				<KeyValues>
					<KeyValue key="LabelLocKey" value="OPTIONS_SETTINGNAME_EXTRARULEINFO" type="string"/>
					<KeyValue key="TextLocKey" value="OPTIONS_SETTINGDESC_EXTRARULEINFO" type="string"/>
				</KeyValues>
                <Size x="250" y="54"/>
                <Anchors>
                    <Anchor point="TOPLEFT" relativeKey="$parent.Tooltip" relativePoint="BOTTOMLEFT" y="0"/>
                    <Anchor point="RIGHT" x="-16" />
                </Anchors>
            </Frame>        
        </Frames>
		<Scripts>
			<OnLoad>Vendor.LoadImplementation(self, "Settings", "Tooltip")</OnLoad>
		</Scripts>
    </Frame>
	
</Ui>