<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/..\FrameXML\UI.xsd">
	<Script file="settings/sellpage.lua"/>

    <Frame name="Vendor_Settings_Sell" inherits="Vendor_Settings_Panel" virtual="true">
        <KeyValues>
            <KeyValue key="HelpTextLocKey" value="OPTIONS_DESC_SELL" type="string"/>
        </KeyValues>
        <Frames>
            <!-- Auto sell settings -->
            <Frame parentKey="AutoSell" inherits="Vendor_Setting_Checkbox">
				<KeyValues>
					<KeyValue key="LabelLocKey" value="OPTIONS_SETTINGNAME_AUTOSELL" type="string"/>
					<KeyValue key="TextLocKey" value="OPTIONS_SETTINGDESC_AUTOSELL" type="string"/>
				</KeyValues>
                <Size x="250" y="54"/>
                <Anchors>
					<Anchor point="TOP" relativeKey="$parent.HelpText" relativePoint="BOTTOM" y="-16"/>
                    <Anchor point="LEFT" x="16" y="-24"/>
                    <Anchor point="RIGHT" x="-16" />
                </Anchors>
            </Frame>

			<!--Buyback limit -->
            <Frame name="$parent.EnableBuyback" parentKey="EnableBuyback" inherits="Vendor_Setting_Checkbox">
				<KeyValues>
					<KeyValue key="LabelLocKey" value="OPTIONS_SETTINGNAME_BUYBACK" type="string"/>
					<KeyValue key="TextLocKey" value="OPTIONS_SETTINGDESC_BUYBACK" type="string"/>
				</KeyValues>
                <Size x="250" y="54"/>
                <Anchors>
                    <Anchor point="TOPLEFT" relativeKey="$parent.AutoSell" relativePoint="BOTTOMLEFT" x="0" y="0"/>
                    <Anchor point="RIGHT" x="-16" />
                </Anchors>
            </Frame>       
        </Frames>
		<Scripts>
			<OnLoad>Vendor.LoadImplementation(self, "Settings", "Sell")</OnLoad>
		</Scripts>
    </Frame>
	
</Ui>